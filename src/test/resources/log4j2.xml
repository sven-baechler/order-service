<Configuration name="swda-service-template" status="warn" monitorInterval="30" strict="true">
    <Appenders>
        <Console name="Console" type="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{DEFAULT}}{White} [%highlight{%-5level}] - %msg%n" disableAnsi="false" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>